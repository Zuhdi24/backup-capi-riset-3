<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Collect" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/white2</item>
        <item name="android:textViewStyle">@style/QuicksandTextViewStyle</item>
        <item name="textAppearanceButton">@style/QuicksandButtonStyle</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="CollectTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
        <item name="android:scrollbarSize">1.75mm</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:homeAsUpIndicator">@android:color/transparent</item>
        <item name="android:logo">@drawable/actionbar_old_back_button</item>
        <item name="android:iconTint" tools:targetApi="o">@color/white2</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white2</item>
    </style>

    <style name="QuicksandTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <style name="QuicksandButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

</resources>
